<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavWidget">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#1A73DF</item>
        <item name="android:textStyle">bold|normal</item>
    </style>

    <style name="TabWidget">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextBoldDetail">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">#000000</item>
    </style>
    <style name="TextDetail">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SpinnerTopic">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold|normal</item>
    </style>

    <style name="Detail_QQL">
        <item name="android:textSize">25dp</item>
    </style>
    <style name="Header_2_blue">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#1A73DF</item>
    </style>

    <style name="text_view_title">
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_addrequest">
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">14sp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textColorHint">#464646</item>

    </style>
    <style name="header_Total">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="info_total">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>

    </style>
    <style name="edit_error">
        <item name="android:textColor">#F80303</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>

    </style>



</resources>
